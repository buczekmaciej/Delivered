{% extends "app/_nav.html.twig" %}

{% block addon %}
	Find friends
{% endblock %}

{% block stylesheets %}
	{{parent()}}
	<link rel="stylesheet" href="/styles/app/friends/find.css">
{% endblock %}

{% block content %}
	<a href="{{path('friends')}}" class="back-to-friends">Back to your friends list</a>
	<div class="users-container">
		{% for user in toAdd %}
			<div class="user-box">
				<div class="user-box-top">
					<img src="{{user.image}}" alt="User profile picture" class="profile-pic">
					<p class="user-name-city">
						<span class="user-name">{{user.name.first}}
							{{user.name.mid}}
							{{user.name.last}}</span>
						<span class="user-city">{{user.city}}</span>
					</p>
					<div class="request-user" data-user-id="{{user.id}}">
						<svg stroke="currentColor" fill="currentColor" stroke-width="0" viewbox="0 0 16 16" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg">
							<path fill-rule="evenodd" d="M11 14s1 0 1-1-1-4-6-4-6 3-6 4 1 1 1 1h10zm-9.995-.944v-.002.002zM1.022 13h9.956a.274.274 0 00.014-.002l.008-.002c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664a1.05 1.05 0 00.022.004zm9.974.056v-.002.002zM6 7a2 2 0 100-4 2 2 0 000 4zm3-2a3 3 0 11-6 0 3 3 0 016 0zm2 2.5a.5.5 0 01.5-.5h4a.5.5 0 010 1h-4a.5.5 0 01-.5-.5z" clip-rule="evenodd"></path>
						</svg>
					</div>
				</div>
				<p class="user-birthday">
					<span class="label">Born</span>
					<span class="value">{{user.birthdayDate|date("d-m-Y")}}
					</span>
				</p>
				<p class="user-last-active">
					<span class="label">Last active</span>
					<span class="value">{{user.lastActivity|date("d-m-Y H:i")}}</span>
				</p>
			</div>
		{% else %}
			<p class="no-user">
				You have friended/invited all app users!
			</p>
		{% endfor %}
	</div>
{% endblock %}


{% block javascripts %}
	{{parent()}}
	<script src="/js/findFriends.js"></script>
{% endblock %}
